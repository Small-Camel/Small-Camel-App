<script>
import wepy from 'wepy';
import api from '../api/api';
import {
  SYSTEM_INFO,
  USER_SPECICAL_INFO,
  USER_INFO
} from '../utils/constant';
import PointsDetail from '../components/points_detail'
export default class Points extends wepy.page {
  config = {
    navigationBarTitleText: '我的积分',
  }
  components = {
    pointsDetail: PointsDetail
  }

  data = {
    winHeight: 0,
    list: [],
    is_empty: false,
    avatarUrl: "",
    nickName: "",
    userPoint: 0
  }
  async getUserPoint() {
      let that = this;
      let userSpecialInfo = wepy.getStorageSync(USER_SPECICAL_INFO) || {};
      let openId = userSpecialInfo.openid;
      const json = await api.pointInfo({
        query: {
          openId: openId,
          page:"1",
          size:"10"
        }
      });
      if (json.data.code == 0) {
        that.list = json.data.list;
        this.userPoint = json.data.userPoint;
        that.$apply();
      } else {
        tip.error(json.data.msg)
      }
      that.showLoading = false;
    }
  events = {
    // 'index-broadcast': (...args) => {
    //   let $event = args[args.length - 1]
    //   console.log(`${this.$name} receive ${$event.name} from ${$event.source.name}`)
    // }
  }

  onLoad() {
    let that = this;
    let systemInfo = wepy.getStorageSync(SYSTEM_INFO);
    let userInfo = wepy.getStorageSync(USER_INFO);
    that.avatarUrl = userInfo.avatarUrl;
    that.nickName = userInfo.nickName;
    that.winHeight = systemInfo.windowHeight;
    console.log("winHeight===",that.winHeight);
    that.getUserPoint();
    that.$apply();
  }
  computed = {

  }
  methods = {
    more() {
      wepy.navigateTo({
        url: '/pages/points_more'
      })
    },
    jfRule() {
      wepy.navigateTo({
        url: '/pages/points_rule'
      })
    }
  }
  events = {

  }
}

</script>
